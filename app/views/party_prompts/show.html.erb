<div class="success-page" data-controller="bubbles" data-bubbles-count-value="60">
  <%= render "shared/success_heading" %>

  <div class="success-card">
    <p class="success-message">
      Your board <strong><%= @board["name"] %></strong> is ready with <%= @board["card_count"] %> prompts.
      <br><br>
      Drag cards to team columns as they score!
    </p>

    <div class="success-actions">
      <%= link_to "Start Playing", @board["url"], class: "btn btn--primary", target: "_blank" %>
      <%= link_to "Back to Labs", root_path, class: "btn" %>
    </div>
  </div>
</div>
